<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/empty_movie_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/empty_movie_content_description" />

    <TextView
        android:id="@+id/empty_screen_display"
        style="@style/EmptyViewTextStyle" />

    <TextView
        android:id="@+id/empty_screen_display_subtext"
        style="@style/EmptyViewSubtextStyle" />

</RelativeLayout>